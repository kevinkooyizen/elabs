<% if current_user.id == @team.user_id %>
  <%= link_to 'Edit Team Details', edit_team_path(@team) %>
<% end %>
<br>
<% if @team.status == false %>
  Team Status: <span class="inactive"> Inactive </span>
<% else %>
  Team Status: <span class="active"> Active </span>
<% end %>
<br>
Team ID: 
<% if @team["team_id"].present? %>
 <%= @team["team_id"] %>
<% end %>
<br>
Name: 
<% if @team["name"].present? %>
  <span class="team_name"> <%= @team["name"] %> </span>
<% end %> 
<br>
Wins: 
<% if @team["wins"].present? %>
  <%= @team["wins"] %>
<% else %>
  <span class="no_wins">Play some games to display winrate.</span>
<% end %>
<br>
Tags: 
<% if @team["tag"].present? %>
 <%= @team["tag"] %>
<% end %>
<p>Team's current roster</p>
<p>Tournament history</p>
<p>Manager: <%= @team.manager %></p>
<p>Sponsor: <%= @team.sponsor %></p>
<p>Coach: <%= @team.coach %></p>
<p>link to form to join team</p>
