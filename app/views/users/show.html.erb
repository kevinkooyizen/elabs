<div class="player-profile-info">
  <div class="player-info-box">
    <div  class="player-info" id="profile">
      <h1 class="player-profile-header">Player profile</h1> 
        <main>
          <section>
            <div class="player-avatar">
              <a href="<%= @user["profile"]["profileurl"] %>">
                <img src="<%= @user["profile"]["avatarfull"] %>" id="avatar">
              </a>
            </div>  
            <div>
              <% if !@user["profile"].nil? %>
                <a href="<%= @user["profile"]["profileurl"] %>">
                  <h3 class="player-name"> <%= @user["profile"]["personaname"] %></h3>
                </a>
            </div>
              <p>Team if present?</p>
              <p>Account ID: <%= @user["profile"]["account_id"] %></p>
              <p>Last Login: <%= DateTime.strptime(@user["profile"]["last_login"], '%Y-%m-%dT%H:%M:%S').strftime('%a %d %b %Y') %></p>
              <p>Country: <%= @user["profile"]["loccountrycode"] %></p>
              <p>Solo MMR: <%= @user["solo_competitive_rank"] %></p>
              <p>Winrate: <%= @user_winrate %>%</p>
              <p>Top Heroes: </p>

              <% @top_heroes_names.each do |name| %>
                <img src="http://cdn.dota2.com/apps/dota2/images/heroes/<%= name %>_lg.png" />
              <% end %>
            <% else %>
              <p>User does not have dota game history</p>
            <% end %>
          </section>
        </main>
    </div>    
  </div>  
</div>
<div class="player-hero-info">
  <div class="player-hero-box">
    <div class="player-hero">
      <main>
        <section>
          <div class="hero-avatar">
            <img src="https://s3-ap-southeast-1.amazonaws.com/elabs-next/Heroes/<%= @top_hero_name.downcase %>.gif" id="hero-gif" >
          </div>
          <div class="hero-stats">
          <h1><%= @top_hero_name %></h1>

          <br>

          <p><strong><font color="#FFCA2A">Times played: <%= @top_hero["games"] %></font></strong></p>

          <br>

          <p><strong><font color="#FFCA2A"> Hero Winrate: <%= @top_hero_winrate %>%</font></strong></p>

          <br>

          <p><strong><font color="#FFCA2A"> Hero Average K.D.A: <%= @top_hero_kills.to_i %>/<%= @top_hero_assists.to_i %>/<%= @top_hero_deaths.to_i %> </font></strong></p>
          </div>
          <div class="hero-match">
          <!-- This is all of the top heroes matches -->
            <table class="past-stats-table">
              <tr>    
                <th><span class="statname">  </span></th>

                <th><span class="statname"> Kills </span></th>

                <th><span class="statname"> Deaths </span></th>

                <th><span class="statname"> Assists </span></th>

                <th><span class="statname"> GPM </span></th>

                <th><span class="statname"> XPM </span></th>

              </tr>
              <% @user_matches[0..4].each do |item| %>
                <% win = false %>
                <% @won.select do |select| %>
                  <% if item["match_id"] == select["match_id"] %>
                    <% win = true %>
                  <% end %>
                <% end %>
              <tr>
                <% if win == true %>
                  <td><span class="won"> Won </span></td>
                <% else %>
                  <td><span class="lost"> Lost </span></td>
                <% end %>
             
                <td><span class="statnumber", id="kills"> <%= item["kills"] %></span></td>

                <td><span class="statnumber", id="deaths"> <%= item["deaths"] %></span></td>

                <td><span class="statnumber", id="assists"> <%= item["assists"] %></span></td>

                <td><span class="statnumber", id="gpm">  </span></td>

                <td><span class="statnumber", id="xpm">  </span></td>
            
              <% end %>
              </tr>
            </table>
          </div>
        </section>
      </main>
    </div>
  </div>  
</div>
<span class="buttonright", id="create-team"> <%= link_to "Create Team", new_team_path %> </span>


